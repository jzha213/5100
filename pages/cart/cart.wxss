/* pages/cart/cart.wxss */
.container {
  padding: 32rpx;
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 为底部结算栏留出空间 */
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 未登录状态 */
.login-prompt {
  text-align: center;
  padding: 100rpx 0;
}

.prompt-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.prompt-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.prompt-desc {
  display: block;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.prompt-buttons {
  display: flex;
  gap: 30rpx;
  justify-content: center;
}

.prompt-buttons .btn-primary,
.prompt-buttons .btn-secondary {
  flex: 1;
  max-width: 200rpx;
}

/* 空购物车状态 */
.empty-cart {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  color: #999;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx 48rpx;
  border-radius: 24rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

/* 购物车商品列表 - 匹配订单页面样式 */
.cart-list {
  margin-bottom: 20rpx;
}

.cart-item {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  border: 2rpx solid #f0f0f0;
}

/* 商品信息区域 */
.item-content {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.item-checkbox {
  flex-shrink: 0;
  margin-top: 8rpx;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
  flex-shrink: 0;
  background: #f8f9fa;
}

.item-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
}

.item-sku {
  font-size: 26rpx;
  color: #666;
}

.item-price-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 8rpx;
}

.item-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}

.item-quantity {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 操作区域 */
.item-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.quantity-controls {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
  transition: all 0.3s ease;
}

.quantity-btn:active {
  background: #e9ecef;
  border-color: #dee2e6;
}

.quantity-input {
  width: 100rpx;
  height: 60rpx;
  text-align: center;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #333;
  background: white;
}

.delete-btn {
  background: #ff4757;
  color: white;
  font-size: 26rpx;
  padding: 16rpx 32rpx;
  border-radius: 20rpx;
  border: none;
  transition: all 0.3s ease;
}

.delete-btn:active {
  background: #ff3742;
  transform: scale(0.95);
}

/* 地址信息 */
.item-address {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin: 16rpx 0;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #667eea;
}

.address-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  flex-shrink: 0;
}

.address-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  flex: 1;
}

/* 备注信息 */
.item-notes {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin: 16rpx 0;
  padding: 16rpx;
  background: #fff3cd;
  border-radius: 12rpx;
  border-left: 4rpx solid #ffc107;
}

.notes-label {
  font-size: 26rpx;
  color: #856404;
  font-weight: 500;
  flex-shrink: 0;
}

.notes-text {
  font-size: 26rpx;
  color: #856404;
  line-height: 1.4;
  flex: 1;
}

/* 小计区域 */
.item-subtotal {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  gap: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid #f0f0f0;
}

.subtotal-label {
  font-size: 28rpx;
  color: #666;
}

.subtotal-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}

/* 底部结算栏 */
.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #eee;
  display: flex;
  align-items: center;
  gap: 24rpx;
  z-index: 100;
}

.select-all {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 28rpx;
  color: #333;
}

.total-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.total-label {
  font-size: 28rpx;
  color: #333;
}

.total-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4757;
}

.btn-checkout {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx 48rpx;
  border-radius: 24rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.btn-checkout:active {
  background: linear-gradient(135deg, #5a6fd8, #6a4190);
  transform: translateY(2rpx);
}

.btn-checkout:disabled {
  background: #ccc;
  color: #999;
  box-shadow: none;
}
