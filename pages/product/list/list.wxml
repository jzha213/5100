<view class="container">
  <!-- 商品列表 -->
  <view class="card" wx:if="{{items.length > 0}}">
    <view class="section-title">商品列表</view>
    <view class="product-grid">
      <view class="product-item" wx:for="{{items}}" wx:key="id" bindtap="goDetail" data-id="{{item.id}}">
        <image class="product-image" src="{{item.mainImage}}" mode="aspectFit"></image>
        <view class="product-info">
          <text class="product-name">{{item.name}}</text>
          <text class="product-price">¥{{item.price}}</text>
          <text class="product-stock">库存: {{item.stock}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 空状态 -->
  <view class="card" wx:elif="{{!loading && items.length === 0}}">
    <view class="empty-state">
      <text class="empty-text">暂无商品</text>
    </view>
  </view>

  <!-- 加载状态 -->
  <view class="card" wx:if="{{loading}}">
    <view class="loading-state">
      <text class="loading-text">加载中...</text>
    </view>
  </view>
</view>

