.container{ 
  padding:24rpx; 
  background-color: #f8f8f8;
  min-height: 100vh;
}

.card{ 
  background:#fff; 
  border-radius:16rpx; 
  padding:30rpx; 
  margin-bottom: 20rpx;
  box-shadow:0 2rpx 8rpx rgba(0,0,0,0.05); 
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  border-left: 8rpx solid #667eea;
  padding-left: 15rpx;
}

/* 商品网格 */
.product-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.product-item {
  width: calc(50% - 10rpx);
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
}

.product-item:active {
  transform: scale(0.98);
}

.product-image {
  width: 100%;
  height: 200rpx;
  background-color: #f5f5f5;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-price {
  font-size: 28rpx;
  color: #ff4500;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.product-stock {
  font-size: 22rpx;
  color: #999;
}

/* 空状态和加载状态 */
.empty-state, .loading-state {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-text, .loading-text {
  font-size: 28rpx;
  color: #999;
}
