/* 商品详情页面样式美化 */
.container { 
  padding: 0; 
  background: #f5f5f5;
  min-height: 100vh;
}

/* 商品图片区域 */
.product-image-section {
  background: white;
  border-radius: 0 0 40rpx 40rpx;
  padding: 0 0 40rpx;
  margin-bottom: 32rpx;
  position: relative;
}

.product-image {
  width: 100%;
  height: 500rpx;
  border-radius: 0 0 40rpx 40rpx;
  background: linear-gradient(135deg, #74b9ff, #0984e3);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 80rpx;
  position: relative;
}

.product-badge {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  background: #ff4757;
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: bold;
}

/* 商品信息卡片 */
.product-info {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin: 0 32rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
}

.product-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.3;
  margin-bottom: 16rpx;
}

.product-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.product-tags {
  display: flex;
  gap: 16rpx;
  margin-bottom: 30rpx;
  flex-wrap: wrap;
}

.product-tag {
  background: #e3f2fd;
  color: #1976d2;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 价格区域 */
.price-section {
  display: flex;
  align-items: center;
  gap: 30rpx;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 30rpx;
}

.current-price {
  font-size: 56rpx;
  font-weight: bold;
  color: #ff4757;
}

.original-price {
  font-size: 32rpx;
  color: #999;
  text-decoration: line-through;
}

.discount-badge {
  background: #ff4757;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

/* 数量选择器 */
.quantity-section {
  margin-bottom: 40rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  gap: 30rpx;
  background: #f8f9fa;
  border-radius: 30rpx;
  padding: 20rpx 30rpx;
  width: fit-content;
}

.quantity-btn {
  width: 64rpx;
  height: 64rpx;
  background: white;
  border: none;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
  font-size: 32rpx;
  color: #333;
}

.quantity-btn:active {
  background: #e9ecef;
  transform: scale(0.95);
}

.quantity-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.quantity {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  min-width: 60rpx;
  text-align: center;
}

/* 商品描述 */
.product-description {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin: 0 32rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
}

.description-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.description-title::before {
  content: '';
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 4rpx;
}

.description-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 操作按钮区域 */
.action-buttons {
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx 32rpx;
  margin-top: 32rpx;
  box-shadow: 0 -8rpx 32rpx rgba(0,0,0,0.08);
  position: sticky;
  bottom: 0;
}

.btn-primary {
  width: 100%;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  padding: 32rpx;
  border-radius: 24rpx;
  border: none;
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.btn-primary:active {
  background: linear-gradient(135deg, #5a6fd8, #6a4190);
  transform: translateY(4rpx);
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.4);
}

.btn-secondary {
  width: 100%;
  background: #f8f9fa;
  color: #333;
  font-size: 32rpx;
  font-weight: 600;
  padding: 32rpx;
  border-radius: 24rpx;
  border: 2rpx solid #e9ecef;
  margin-top: 20rpx;
  transition: all 0.3s ease;
}

.btn-secondary:active {
  background: #e9ecef;
  border-color: #dee2e6;
}

/* 加载状态和错误状态 */
.loading-state, .error-state {
  text-align: center;
  padding: 120rpx 40rpx;
  background: white;
  border-radius: 24rpx;
  margin: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
}

.loading-state .icon, .error-state .icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.loading-text, .error-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 32rpx;
}

.error-text {
  color: #ff4757;
}

/* 商品规格 */
.product-specs {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin: 0 32rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
}

.spec-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.spec-item:last-child {
  border-bottom: none;
}

.spec-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.spec-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}
