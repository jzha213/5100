/* 订单详情页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 加载和错误状态 */
.loading, .error {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #666;
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.order-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.order-status {
  font-size: 28rpx;
  color: #667eea;
  background: #f0f2ff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 订单信息 */
.order-info {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.order-info view {
  margin-bottom: 10rpx;
}

/* 章节标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #667eea;
}

/* 商品列表 */
.product-list {
  margin-top: 20rpx;
}

.product-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  margin-right: 20rpx;
}

.product-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.product-sku {
  font-size: 24rpx;
  color: #999;
}

.product-details {
  text-align: right;
  min-width: 200rpx;
}

.product-price {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.product-quantity {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 4rpx;
}

.product-subtotal {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}

/* 金额明细 */
.amount-details {
  margin-top: 20rpx;
}

.amount-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  font-size: 28rpx;
  color: #666;
}

.amount-row.total {
  border-top: 1rpx solid #eee;
  margin-top: 20rpx;
  padding-top: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.discount {
  color: #ff6b6b;
}

.total-amount {
  color: #667eea;
  font-size: 36rpx;
}

/* 地址信息 */
.address-info {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.address-info text {
  display: block;
  margin-bottom: 8rpx;
}

.address-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 10rpx;
  display: block;
}

.contact-info {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.address-details {
  margin-top: 20rpx;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.receiver-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.phone {
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
}

.default-tag {
  background-color: #667eea;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-left: auto;
}

.address-detail {
  margin-top: 10rpx;
}

/* 操作按钮样式 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.btn-danger {
  background-color: #ff4757;
  color: #ffffff;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  border: none;
  flex: 1;
}

.btn-danger:active {
  background-color: #ff3742;
}

.btn-primary {
  background-color: #667eea;
  color: #ffffff;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  border: none;
  flex: 1;
}

.btn-primary:active {
  background-color: #5a6fd8;
}

/* 响应式调整 */
@media (max-width: 400px) {
  .product-item {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .product-details {
    text-align: left;
    margin-top: 10rpx;
    min-width: auto;
  }
}
