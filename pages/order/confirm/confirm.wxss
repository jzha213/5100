/* 订单确认页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 为底部提交按钮留出空间 */
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 加载和错误状态 */
.loading, .error {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #666;
}

/* 章节标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #667eea;
}

/* 商品信息 */
.product-header {
  margin-bottom: 20rpx;
}

.product-info {
  display: flex;
  align-items: center;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

/* 订单组样式 */
.order-group {
  margin-bottom: 32rpx;
}

.order-group:last-child {
  margin-bottom: 0;
}

/* 购物车商品列表 */
.checkout-groups {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.checkout-group {
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  overflow: hidden;
  background: white;
}

.group-items {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.checkout-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
}

.group-subtotal {
  background: #f8f9fa;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 2rpx solid #e9ecef;
}

.subtotal-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 600;
}

.subtotal-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}

/* 地址组样式 */
.address-groups {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.address-group {
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  overflow: hidden;
  background: white;
}

.group-header {
  background: #f8f9fa;
  padding: 20rpx;
  border-bottom: 2rpx solid #e9ecef;
}

.group-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.address-section {
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
  border-radius: 12rpx;
  transition: background-color 0.3s ease;
}

.address-section:active {
  background: #f8f9fa;
}

.address-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.address-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.receiver-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.phone {
  font-size: 26rpx;
  color: #666;
}

.default-tag {
  background: #667eea;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.address-detail {
  margin-top: 8rpx;
}

.address-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.no-address {
  flex: 1;
  text-align: center;
  padding: 40rpx 0;
}

.no-address-text {
  font-size: 28rpx;
  color: #999;
}

.address-arrow {
  font-size: 24rpx;
  color: #ccc;
  margin-left: 16rpx;
}

.item-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.item-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.3;
}

.item-sku {
  font-size: 24rpx;
  color: #666;
}

.item-price-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 8rpx;
}

.item-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff6b35;
}

.item-quantity {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.item-subtotal {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.subtotal-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}

.product-details {
  flex: 1;
}

.product-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.product-sku {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 8rpx;
}

.product-price {
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
}

/* 数量选择器 */
.quantity-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #667eea;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 20rpx;
}

.quantity-btn:disabled {
  background-color: #ccc;
  color: #999;
}

.quantity-input {
  width: 120rpx;
  height: 60rpx;
  text-align: center;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.quantity-tip {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 金额明细 */
.amount-details {
  margin-top: 20rpx;
}

.amount-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  font-size: 28rpx;
  color: #666;
}

.amount-row.total {
  border-top: 1rpx solid #eee;
  margin-top: 20rpx;
  padding-top: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.total-amount {
  color: #667eea;
  font-size: 36rpx;
}

/* 备注输入 */
.remark-input {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fafafa;
  box-sizing: border-box;
}

.remark-input:focus {
  border-color: #667eea;
  background-color: white;
}

/* 底部提交区域 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx;
  border-top: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.total-info {
  display: flex;
  align-items: center;
}

.total-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.total-price {
  font-size: 36rpx;
  color: #667eea;
  font-weight: bold;
}

.btn-submit {
  background-color: #667eea;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  min-width: 200rpx;
}

.btn-submit:disabled {
  background-color: #ccc;
  color: #999;
}

/* 响应式调整 */
@media (max-width: 400px) {
  .product-info {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .product-image {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
  
  .submit-section {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .btn-submit {
    width: 100%;
  }
}

/* 地址选择区域 */
.address-section {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.address-info {
  flex: 1;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.receiver-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.phone {
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
}

.default-tag {
  background-color: #667eea;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-left: auto;
}

.address-detail {
  margin-top: 8rpx;
}

.address-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.no-address {
  flex: 1;
  text-align: center;
  padding: 40rpx 0;
}

.no-address-text {
  font-size: 28rpx;
  color: #999;
}

.address-arrow {
  font-size: 32rpx;
  color: #ccc;
  margin-left: 20rpx;
}

/* 地址选择弹窗 */
.address-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  width: 100%;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.address-list {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 0;
}

.address-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  display: flex;
  align-items: flex-start;
}

.address-item.selected {
  background-color: #f8f9ff;
}

.address-item .address-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  flex: 1;
}

.address-item .receiver-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.address-item .phone {
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
}

.address-item .default-tag {
  background-color: #667eea;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-left: auto;
}

.address-item .address-detail {
  margin-top: 8rpx;
  flex: 1;
}

.address-item .address-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.address-check {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
}

.modal-footer {
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
}

.btn-add-address {
  flex: 1;
  background-color: #667eea;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-cancel {
  flex: 1;
  background-color: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx;
  font-size: 28rpx;
}
