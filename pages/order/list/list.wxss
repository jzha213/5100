/* 订单列表页面样式美化 */
.container { 
  padding: 32rpx; 
  background: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 40rpx 32rpx;
  margin: -32rpx -32rpx 32rpx;
  border-radius: 0 0 40rpx 40rpx;
  text-align: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 订单列表 */
.order-list {
  margin-top: 32rpx;
}

.order-item {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  overflow: hidden;
  transition: all 0.3s ease;
}

.order-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.15);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
}

.order-info {
  flex: 1;
}

.order-no {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.order-status {
  font-size: 24rpx;
  color: #667eea;
  background-color: #f0f2ff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.order-amount {
  font-size: 32rpx;
  color: #ff4500;
  font-weight: bold;
}

/* 商品列表 */
.product-list {
  padding: 20rpx;
}

.product-item {
  display: flex;
  align-items: flex-start;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.product-sku {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-bottom: 10rpx;
}

.product-price-quantity {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.product-price {
  font-size: 26rpx;
  color: #666;
}

.product-quantity {
  font-size: 24rpx;
  color: #999;
}

.product-subtotal {
  font-size: 28rpx;
  color: #ff4500;
  font-weight: bold;
}

/* 订单时间 */
.order-time {
  padding: 15rpx 20rpx;
  background-color: #f8f9fa;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}

.time-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 10rpx;
}

.time-value {
  font-size: 24rpx;
  color: #666;
}

/* 空状态和加载状态 */
.empty-state, .loading-state {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-text, .loading-text {
  font-size: 28rpx;
  color: #999;
}
