/* 分类页面样式美化 */
.container { 
  padding: 32rpx; 
  background: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 40rpx 32rpx;
  margin: -32rpx -32rpx 32rpx;
  border-radius: 0 0 40rpx 40rpx;
  text-align: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 分类选择器 */
.category-selector {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
}

.picker-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.picker-display:active {
  background: #e9ecef;
  border-color: #667eea;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.picker-arrow {
  font-size: 24rpx;
  color: #667eea;
  transition: transform 0.3s ease;
}

.picker-display:active .picker-arrow {
  transform: rotate(180deg);
}

/* 商品网格 */
.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-top: 32rpx;
}

.product-item {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  transition: all 0.3s ease;
  cursor: pointer;
}

.product-item:active {
  transform: translateY(-8rpx);
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.15);
}

.product-image {
  width: 100%;
  height: 240rpx;
  background: linear-gradient(135deg, #74b9ff, #0984e3);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 48rpx;
  position: relative;
}

.product-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: #ff4757;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
}

.product-info {
  padding: 24rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.3;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-desc {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4757;
  margin-bottom: 8rpx;
}

.product-stock {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.product-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.add-to-cart-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.add-to-cart-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #5a6fd8, #6a4190);
}

/* 空状态和加载状态 */
.empty-state, .loading-state {
  text-align: center;
  padding: 120rpx 40rpx;
  background: white;
  border-radius: 24rpx;
  margin-top: 32rpx;
}

.empty-state .icon, .loading-state .icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text, .loading-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 32rpx;
}

/* 刷新按钮 */
.refresh-btn {
  background: #f8f9fa;
  color: #667eea;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.refresh-btn:active {
  background: #e9ecef;
  border-color: #667eea;
}

/* 筛选器 */
.filter-section {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
}

.filter-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.filter-options {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.filter-option {
  background: #f8f9fa;
  color: #333;
  border: 2rpx solid #e9ecef;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.filter-option.active {
  background: #667eea;
  color: white;
  border-color: #667eea;
}

.filter-option:active {
  transform: scale(0.95);
}

/* 搜索信息样式 */
.search-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin-top: 16rpx;
}

.search-keyword {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.search-count {
  font-size: 24rpx;
  color: #666;
}

