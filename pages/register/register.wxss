/* 注册页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 40rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  margin-top: 40rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  background: #ffffff;
  border-radius: 50%;
  border: 2rpx solid #4da3ff;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

/* 注册页面默认头像（蓝色人形 + 白色圆形背景）- 与首页左上角图标一致 */
.logo-default-avatar {
  position: relative;
  width: 100%;
  height: 100%;
}

.logo-default-head {
  position: absolute;
  top: 12%;
  left: 30%;
  width: 40%;
  height: 40%;
  background: #4da3ff;
  border-radius: 50%;
}

.logo-default-body {
  position: absolute;
  bottom: 8%;
  left: 20%;
  width: 60%;
  height: 42%;
  background: #4da3ff;
  border-radius: 50% 50% 45% 45%;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.form-container {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.form-group {
  margin-bottom: 32rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #667eea;
  background: #fff;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.input::placeholder {
  color: #999;
}

.btn-register {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 20rpx;
  border: none;
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
  margin-top: 40rpx;
  margin-bottom: 32rpx;
}

.btn-register:active {
  background: linear-gradient(135deg, #5a6fd8, #6a4190);
  transform: translateY(4rpx);
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.4);
}

.btn-register[disabled] {
  background: #cccccc;
  box-shadow: none;
  color: #999999;
  transform: none;
}

.login-link {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
}

.link-text {
  color: #667eea;
  margin-left: 10rpx;
  font-weight: bold;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 20rpx;
  }
  
  .form-container {
    padding: 30rpx;
  }
  
  .title {
    font-size: 42rpx;
  }
  
  .subtitle {
    font-size: 26rpx;
  }
}
