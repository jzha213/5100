<view class="container">
  <view class="header">
    <image class="logo" src="{{defaultAvatarUrl}}"></image>
    <text class="title">新用户注册</text>
    <text class="subtitle">欢迎加入5100天然冰川矿泉水</text>
  </view>

  <view class="form-container">
    <!-- 用户名 -->
    <view class="form-group">
      <text class="label">用户名 *</text>
      <input 
        class="input" 
        placeholder="请输入用户名（英文和数字）" 
        bindinput="onUsernameInput" 
        value="{{username}}" 
        maxlength="20"
      />
    </view>

    <!-- 昵称 -->
    <view class="form-group">
      <text class="label">昵称</text>
      <input 
        class="input" 
        placeholder="请输入昵称" 
        bindinput="onNicknameInput" 
        value="{{nickname}}" 
        maxlength="20"
      />
    </view>

    <!-- 密码 -->
    <view class="form-group">
      <text class="label">密码 *</text>
      <input 
        class="input" 
        placeholder="请输入密码（至少6位）" 
        password 
        bindinput="onPasswordInput" 
        value="{{password}}" 
        maxlength="20"
      />
    </view>

    <!-- 确认密码 -->
    <view class="form-group">
      <text class="label">确认密码 *</text>
      <input 
        class="input" 
        placeholder="请再次输入密码" 
        password 
        bindinput="onConfirmPasswordInput" 
        value="{{confirmPassword}}" 
        maxlength="20"
      />
    </view>

    <!-- 手机号 -->
    <view class="form-group">
      <text class="label">手机号 *</text>
      <input 
        class="input" 
        placeholder="请输入手机号码" 
        type="number" 
        bindinput="onPhoneInput" 
        value="{{phone}}" 
        maxlength="11"
      />
    </view>

    <!-- 邮箱 -->
    <view class="form-group">
      <text class="label">邮箱</text>
      <input 
        class="input" 
        placeholder="请输入邮箱地址" 
        type="text" 
        bindinput="onEmailInput" 
        value="{{email}}" 
        maxlength="50"
      />
    </view>

    <!-- 注册按钮 -->
    <button 
      class="btn-register" 
      bindtap="register" 
      disabled="{{loading}}"
    >
      {{loading ? '注册中...' : '立即注册'}}
    </button>

    <!-- 登录链接 -->
    <view class="login-link" bindtap="toLogin">
      <text>已有账号？</text>
      <text class="link-text">去登录</text>
    </view>
  </view>
</view>
