/**index.wxss - 首页样式美化**/

/* 首页容器 */
.container {
  margin-top: 0;
  margin-left: 0;
  padding: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  position: relative;
}

/* 头部区域 */
.header {
  padding: 40rpx 32rpx 0;
  color: white;
  position: relative;
  z-index: 10;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.logo {
  font-size: 48rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.logo-icon {
  width: 48rpx;
  height: 48rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.location {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  background: rgba(255,255,255,0.2);
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  backdrop-filter: blur(20rpx);
}

/* 搜索栏 */
.search-bar {
  background: rgba(255,255,255,0.9);
  border-radius: 50rpx;
  padding: 24rpx 40rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 8rpx 40rpx rgba(0,0,0,0.1);
  margin-bottom: 40rpx;
}

.search-bar input {
  border: none;
  outline: none;
  flex: 1;
  background: transparent;
  font-size: 32rpx;
  color: #333;
}

.search-bar input::placeholder {
  color: #999;
}

.search-icon {
  color: #667eea;
  font-size: 32rpx;
}

/* 轮播图区域 */
.banner {
  margin: 0 32rpx 40rpx;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 60rpx rgba(0,0,0,0.15);
  position: relative;
}

.banner-image {
  width: 100%;
  height: 400rpx;
  object-fit: cover;
}

.banner-content {
  position: absolute;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  color: white;
  background: rgba(0,0,0,0.3);
  padding: 30rpx;
  border-radius: 30rpx;
  backdrop-filter: blur(20rpx);
}

.banner-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.banner-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 内容区域 */
.content {
  background: white;
  border-radius: 50rpx 50rpx 0 0;
  margin-top: -20rpx;
  position: relative;
  z-index: 10;
  padding: 40rpx 32rpx;
}

/* 分类区域 */
.categories {
  margin-bottom: 60rpx;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 40rpx;
  margin-bottom: 60rpx;
}

.category-item {
  text-align: center;
  padding: 30rpx 20rpx;
  border-radius: 30rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
  cursor: pointer;
}

.category-item:active {
  background: #e9ecef;
  transform: translateY(-4rpx);
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16rpx;
  overflow: hidden;
  position: relative;
}

.category-icon-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.category-icon-emoji {
  color: white;
  font-size: 36rpx;
  line-height: 1;
}

.category-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 更多按钮样式 */
.more-btn {
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  border: 2rpx dashed #dee2e6;
}

.more-btn .category-icon {
  background: linear-gradient(135deg, #6c757d, #495057);
  color: white;
}

.more-btn .category-name {
  color: #6c757d;
  font-weight: 600;
}

/* 更多推荐商品按钮样式 */
.more-products-btn {
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  border: 2rpx dashed #dee2e6;
}

.more-products-btn .product-image {
  background: linear-gradient(135deg, #6c757d, #495057);
  color: white;
}

.more-products-btn .product-name {
  color: #6c757d;
  font-weight: 600;
}

.more-products-btn .product-desc {
  color: #999;
}

/* 推荐商品 */
.featured-products {
  margin-bottom: 40rpx;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.product-card {
  background: white;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.08);
  transition: all 0.3s ease;
  cursor: pointer;
}

.product-card:active {
  transform: translateY(-10rpx);
  box-shadow: 0 16rpx 50rpx rgba(0,0,0,0.15);
}

.product-image {
  width: 100%;
  height: 240rpx;
  background: linear-gradient(135deg, #74b9ff, #0984e3);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 48rpx;
  position: relative;
  z-index: 1;
}

.product-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: #ff4757;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
}

.product-info {
  padding: 30rpx;
  position: relative;
  z-index: 2;
  background: white;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.3;
}

.product-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.product-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4757;
}


/* 底部导航 */
.bottom-nav {
  height: 166rpx;
  background: white;
  border-top: 2rpx solid #eee;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-bottom: 40rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  padding: 16rpx;
  border-radius: 16rpx;
}

.nav-item.active {
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
}

.nav-item i {
  font-size: 40rpx;
}

.nav-item span {
  font-size: 24rpx;
  font-weight: 500;
}

/* 浮动购物车 */
.floating-cart {
  position: fixed;
  bottom: 200rpx;
  right: 40rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(102, 126, 234, 0.4);
  cursor: pointer;
  transition: all 0.3s ease;
  z-index: 100;
}

.floating-cart:active {
  transform: scale(1.1);
}

.cart-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #ff4757;
  color: white;
  font-size: 20rpx;
  font-weight: bold;
  padding: 4rpx 8rpx;
  border-radius: 16rpx;
  min-width: 32rpx;
  text-align: center;
}
