/**index.wxss - 首页样式美化**/

/* 首页容器 */
.container {
  margin-top: 0;
  margin-left: 0;
  padding: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  position: relative;
}

/* 自定义导航栏 - 固定在顶部，不随页面滚动 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.navbar-content {
  height: 88rpx; /* 导航栏高度 44px (88rpx) */
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  position: relative;
}

/* 导航栏左上角图标 */
.navbar-logo {
  display: flex;
  align-items: center;
  gap: 8rpx;
  z-index: 1;
}

.navbar-logo-icon {
  width: 58rpx;
  height: 58rpx;
  background: #ffffff;
  border-radius: 50%;
  border: 2rpx solid #4da3ff;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

/* 导航栏左上角默认头像（蓝色人形 + 白色圆形背景） */
.navbar-logo-default-avatar {
  position: relative;
  width: 100%;
  height: 100%;
}

.navbar-logo-default-head {
  position: absolute;
  top: 12%;
  left: 30%;
  width: 40%;
  height: 40%;
  background: #4da3ff;
  border-radius: 50%;
}

.navbar-logo-default-body {
  position: absolute;
  bottom: 8%;
  left: 20%;
  width: 60%;
  height: 42%;
  background: #4da3ff;
  border-radius: 50% 50% 45% 45%;
}

.navbar-logo-arrow {
  font-size: 32rpx;
  color: #ffffff;
  opacity: 0.9;
}

/* 导航栏标题 - 居中显示 */
.navbar-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  z-index: 0;
}

/* 导航栏右侧占位，保持标题居中 */
.navbar-placeholder {
  width: 66rpx; /* 图标宽度 58rpx + 箭头宽度约 8rpx，与左侧对称 */
  height: 58rpx;
  z-index: 1;
}

/* 头部区域 */
.header {
  /* 为自定义导航栏预留空间：状态栏高度 + 导航栏高度 */
  padding-top: calc(env(safe-area-inset-top, 44px) + 88rpx);
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-bottom: 0;
  color: white;
  position: relative;
  z-index: 10;
}

.logo-icon {
  /* 图标整体放大约 20% */
  width: 58rpx;
  height: 58rpx;
  background: #ffffff;
  border-radius: 50%;
  border: 2rpx solid #4da3ff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

/* 头像右侧 “>” 图标样式，与头像间隔紧凑 */
.logo-arrow {
  font-size: 32rpx;
  color: #ffffff;
  opacity: 0.9;
  /* 去掉 margin-left，使用 .logo 的 gap 控制间距 */
}

/* 首页左上角默认头像（蓝色人形 + 白色圆形背景） */
.logo-default-avatar {
  position: relative;
  width: 100%;
  height: 100%;
}

.logo-default-head {
  position: absolute;
  top: 12%;
  left: 30%;
  width: 40%;
  height: 40%;
  background: #4da3ff;
  border-radius: 50%;
}

.logo-default-body {
  position: absolute;
  bottom: 8%;
  left: 20%;
  width: 60%;
  height: 42%;
  background: #4da3ff;
  border-radius: 50% 50% 45% 45%;
}

.location {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  background: rgba(255,255,255,0.2);
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  backdrop-filter: blur(20rpx);
}

/* 搜索栏 */
.search-bar {
  background: rgba(255,255,255,0.9);
  border-radius: 50rpx;
  padding: 24rpx 40rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 8rpx 40rpx rgba(0,0,0,0.1);
  margin-bottom: 40rpx;
}

.search-bar input {
  border: none;
  outline: none;
  flex: 1;
  background: transparent;
  font-size: 32rpx;
  color: #333;
}

.search-bar input::placeholder {
  color: #999;
}

.search-icon {
  color: #667eea;
  font-size: 32rpx;
}

/* 推荐商品轮播区域 */
.banner-swiper {
  margin: 0 32rpx 40rpx;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 60rpx rgba(0,0,0,0.15);
  position: relative;
  height: 400rpx;
}

.product-swiper {
  width: 100%;
  height: 100%;
}

.swiper-product-item {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); /* 添加背景色，填充空白区域 */
}

.swiper-product-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%); /* 居中显示 */
  z-index: 1;
}

.swiper-product-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0,0,0,0.7), rgba(0,0,0,0.3), transparent);
  padding: 40rpx 32rpx 30rpx;
  z-index: 2;
  color: white;
}

.swiper-product-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.swiper-product-desc {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.swiper-product-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #ffd700;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.3);
}

/* 内容区域 */
.content {
  background: white;
  border-radius: 50rpx 50rpx 0 0;
  margin-top: -20rpx;
  position: relative;
  z-index: 10;
  padding: 40rpx 32rpx;
}

/* 分类区域 */
.categories {
  margin-bottom: 60rpx;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr); /* 每行4个，7个分类+1个"更多"=8个，显示2行 */
  gap: 40rpx;
  margin-bottom: 60rpx;
}

.category-item {
  text-align: center;
  padding: 30rpx 20rpx;
  border-radius: 30rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
  cursor: pointer;
}

.category-item:active {
  background: #e9ecef;
  transform: translateY(-4rpx);
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16rpx;
  overflow: hidden;
  position: relative;
}

.category-icon-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.category-icon-emoji {
  color: white;
  font-size: 36rpx;
  line-height: 1;
}

.category-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 更多按钮样式 */
.more-btn {
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  border: 2rpx dashed #dee2e6;
}

.more-btn .category-icon {
  background: linear-gradient(135deg, #6c757d, #495057);
  color: white;
}

.more-btn .category-name {
  color: #6c757d;
  font-weight: 600;
}

/* 更多推荐商品按钮样式 */
.more-products-btn {
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  border: 2rpx dashed #dee2e6;
}

.more-products-btn .product-image {
  background: linear-gradient(135deg, #6c757d, #495057);
  color: white;
}

.more-products-btn .product-name {
  color: #6c757d;
  font-weight: 600;
}

.more-products-btn .product-desc {
  color: #999;
}

/* 推荐商品 */
.featured-products {
  margin-bottom: 40rpx;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.product-card {
  background: white;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.08);
  transition: all 0.3s ease;
  cursor: pointer;
}

.product-card:active {
  transform: translateY(-10rpx);
  box-shadow: 0 16rpx 50rpx rgba(0,0,0,0.15);
}

.product-image {
  width: 100%;
  height: 240rpx;
  background: linear-gradient(135deg, #74b9ff, #0984e3);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 48rpx;
  position: relative;
  overflow: hidden; /* 确保图片不会溢出 */
  z-index: 1;
}

.product-image image {
  width: 100%;
  height: 100%;
  object-fit: contain; /* 图片完整显示，不裁剪 */
}

.product-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: #ff4757;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
}

.product-info {
  padding: 30rpx;
  position: relative;
  z-index: 2;
  background: white;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.3;
}

.product-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.product-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4757;
}


/* 底部导航 */
.bottom-nav {
  height: 166rpx;
  background: white;
  border-top: 2rpx solid #eee;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-bottom: 40rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  padding: 16rpx;
  border-radius: 16rpx;
}

.nav-item.active {
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
}

.nav-item i {
  font-size: 40rpx;
}

.nav-item span {
  font-size: 24rpx;
  font-weight: 500;
}

/* 浮动购物车 */
.floating-cart {
  position: fixed;
  bottom: 200rpx;
  right: 40rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(102, 126, 234, 0.4);
  cursor: pointer;
  transition: all 0.3s ease;
  z-index: 100;
}

.floating-cart:active {
  transform: scale(1.1);
}

.cart-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #ff4757;
  color: white;
  font-size: 20rpx;
  font-weight: bold;
  padding: 4rpx 8rpx;
  border-radius: 16rpx;
  min-width: 32rpx;
  text-align: center;
}
