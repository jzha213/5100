/* 全局样式 - 基于UI设计图统一美化 */
page { 
  background: #f5f5f5; 
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* 容器样式 */
.container { 
  padding: 24rpx; 
  min-height: 100vh;
}

/* 卡片样式 - 统一圆角和阴影 */
.card { 
  background: #fff; 
  border-radius: 24rpx; 
  padding: 32rpx; 
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08); 
  margin-bottom: 24rpx;
  transition: all 0.3s ease;
}

.card:hover {
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.12);
  transform: translateY(-4rpx);
}

/* 主要按钮样式 - 渐变背景 */
.btn-primary { 
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff; 
  font-size: 28rpx;
  font-weight: 600;
  padding: 24rpx 48rpx; 
  border-radius: 16rpx; 
  border: none;
  margin-top: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.btn-primary:active {
  background: linear-gradient(135deg, #5a6fd8, #6a4190);
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

/* 次要按钮样式 */
.btn-secondary {
  background: #f8f9fa;
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
  padding: 20rpx 40rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.btn-secondary:active {
  background: #e9ecef;
  border-color: #dee2e6;
}

/* 危险按钮样式 */
.btn-danger {
  background: #ff4757;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  padding: 20rpx 40rpx;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(255, 71, 87, 0.3);
  transition: all 0.3s ease;
}

.btn-danger:active {
  background: #ff3742;
  transform: translateY(2rpx);
}

/* 文本样式 */
.text-muted { 
  color: #666; 
  font-size: 24rpx;
}

.text-primary {
  color: #667eea;
  font-weight: 600;
}

.text-danger {
  color: #ff4757;
  font-weight: 600;
}

.text-success {
  color: #00b894;
  font-weight: 600;
}

/* 标题样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.section-title::before {
  content: '';
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 4rpx;
}

/* 价格样式 */
.price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4757;
}

.price-original {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 16rpx;
}

/* 标签样式 */
.badge {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.badge-primary {
  background: #e3f2fd;
  color: #1976d2;
}

.badge-danger {
  background: #ff4757;
  color: white;
}

.badge-success {
  background: #00b894;
  color: white;
}

/* 输入框样式 */
.input {
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #667eea;
  background: #fff;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

/* 分割线 */
.divider {
  height: 2rpx;
  background: #e9ecef;
  margin: 32rpx 0;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-state .icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

/* 浮动操作按钮 */
.fab {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(102, 126, 234, 0.4);
  z-index: 100;
  transition: all 0.3s ease;
}

.fab:active {
  transform: scale(0.95);
}

/* 徽章 */
.badge-count {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #ff4757;
  color: white;
  font-size: 20rpx;
  font-weight: bold;
  padding: 4rpx 8rpx;
  border-radius: 16rpx;
  min-width: 32rpx;
  text-align: center;
}

